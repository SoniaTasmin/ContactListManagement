@using Core.Entities
@model IEnumerable<ContactList>
<table class="table table-bordered" id="contactListTable">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                Email
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var contactList in Model)
            {
                <tr>
                    <td>
                        @contactList.Name
                    </td>
                    <td>
                        @contactList.PhoneNumber
                    </td>
                    <td>
                        @contactList.Email
                    </td>
                    <td text-right">
                        <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@contactList.Id','Edit Contact List')" class="btn btn-info text-white"> Edit</a>
                        <form method="post" asp-page="Index" asp-route-id="@contactList.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                            <button type="submit" class="btn btn-danger text-white"> Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#contactListTable").DataTable();
    });
</script>